<div class="page-header">
  <%= link_to new_post_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Post
  <% end %>
  <h1>Some Snarky Blog Title</h1>
</div>

<div class="table-responsive">
  <% @posts.each do |post| %>
    <%= render :partial => 'posts/post', :object => post %> 
  <% end %>
</div>
